{
  "name": "@funboxteam/stylelint-rules",
  "version": "1.2.0",
  "description": "A collection of SCSS rules missing in stylelint-scss",
  "main": "src/index.js",
  "scripts": {
    "lint": "npm run lint-js",
    "lint-js": "bash ./config/bin/lint-js",
    "jest": "jest",
    "watch": "jest --watch",
    "test-rule": "jest"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "4.14.0",
    "eslint": "6.1.0",
    "husky": "3.0.3",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "postcss": "6.0.22",
    "postcss-scss": "1.0.5"
  },
  "dependencies": {
    "lodash": "4.17.15",
    "stylelint": "10.1.0",
    "stylelint-scss": "3.9.3"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testRegex": "src/.*/__tests__/.*\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --quiet",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix --cache -c config/.eslintrc.js",
      "git add"
    ]
  }
}
