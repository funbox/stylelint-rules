{
  "name": "@funboxteam/stylelint-rules",
  "version": "1.2.0",
  "description": "A collection of SCSS rules missing in stylelint-scss",
  "main": "src/index.js",
  "scripts": {
    "lint": "npm run lint-js",
    "lint-js": "bash ./config/bin/lint-js",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again",
    "jest": "jest",
    "watch": "jest --watch",
    "test-rule": "jest"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "4.12.0",
    "eslint": "5.3.0",
    "husky": "0.14.3",
    "jest": "23.1.0",
    "lint-staged": "4.1.3",
    "postcss": "6.0.22",
    "postcss-scss": "1.0.5"
  },
  "dependencies": {
    "lodash": "4.17.15",
    "stylelint": "9.2.1",
    "stylelint-scss": "3.1.0"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testRegex": "src/.*/__tests__/.*\\.js$"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix --cache -c config/.eslintrc.js",
        "git add"
      ]
    },
    "renderer": "silent"
  }
}
