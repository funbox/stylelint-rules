{
  "name": "@funboxteam/stylelint-rules",
  "version": "1.3.0",
  "description": "A collection of SCSS rules missing in stylelint-scss",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint --cache -c .eslintrc.js --ext .js src",
    "test": "jest",
    "watch": "jest --watch"
  },
  "devDependencies": {
    "@funboxteam/eslint-config": "5.1.0",
    "eslint": "5.16.0",
    "husky": "3.0.5",
    "jest": "24.8.0",
    "lint-staged": "10.4.2",
    "postcss": "7.0.17",
    "postcss-scss": "2.0.0"
  },
  "dependencies": {
    "lodash": "4.17.15",
    "stylelint": "10.1.0",
    "stylelint-scss": "3.9.3"
  },
  "jest": {
    "setupFiles": [
      "./jest-setup.js"
    ],
    "testRegex": "src/.*/__tests__/.*\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "eslint --fix --cache -c .eslintrc.js"
  }
}
